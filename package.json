{
  "name": "wei-craft",
  "version": "0.0.1",
  "author": {
    "name": "weiking1021",
    "email": "weiking1021@gmail.com",
    "url": "https://weicraft.tw/"
  },
  "build": {
    "appId": "me.weiking1021.weicraft",
    "productName": "WeiCraft",
    "directories": {
      "output": "electron_build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "dist_electron/assets/icon256.ico"
    },
    "linux": {
      "icon": "dist_electron/assets/icon32.png"
    },
    "files": [
      "!.vscode",
      "!dist",
      "!e2e",
      "!electron_build",
      "!node_modules",
      "!src"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --disableHostCheck",
    "build": "ng build --prod --build-optimizer",
    "build-electron": "ng build --prod --build-optimizer --base-href=./ --output-path=./dist_electron",
    "build-github": "npm run build",
    "test-electron": "electron main.js",
    "install-win64": "electron-builder --win --x64",
    "install-linux": "electron-builder --linux",
    "install-github": "ngh",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "main": "main.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.0.6",
    "@angular/common": "~11.0.6",
    "@angular/compiler": "~11.0.6",
    "@angular/core": "~11.0.6",
    "@angular/forms": "~11.0.6",
    "@angular/platform-browser": "~11.0.6",
    "@angular/platform-browser-dynamic": "~11.0.6",
    "@angular/router": "~11.0.6",
    "hammerjs": "^2.0.8",
    "ng-zorro-antd": "^11.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.6",
    "@angular/cli": "~11.0.6",
    "@angular/compiler-cli": "~11.0.6",
    "@schematics/angular": "^11.0.7",
    "@types/hammerjs": "^2.0.39",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
